<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.devchie.videomaker.view.RoundRectView
        android:id="@id/filterContainer"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4.0dip"
        app:shape_roundRect_bottomLeftRadius="8.0dip"
        app:shape_roundRect_bottomRightRadius="8.0dip"
        app:shape_roundRect_topLeftRadius="8.0dip"
        app:shape_roundRect_topRightRadius="8.0dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@id/filter_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@id/filter_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_3sdp"
                android:gravity="center"
                android:background="@drawable/ic_rfilter"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11sdp"
                android:theme="@style/TextBelowImage" />
        </RelativeLayout>

    </com.devchie.videomaker.view.RoundRectView>

</LinearLayout>