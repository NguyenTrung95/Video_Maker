<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/toolBarShare"
        android:layout_width="fill_parent"
        android:layout_height="96.0dip"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@id/btnBackFinal"
            android:layout_width="56.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:padding="16.0dip"
            android:tint="@color/black"
            android:src="@drawable/ic_arrow_back_24dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/btnRate"
            android:layout_width="56.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:paddingStart="12.0dip"
            android:paddingEnd="12.0dip"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_rate" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_thumb"
        android:layout_below="@+id/toolBarShare"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_150sdp">

        <View
            android:layout_width="@dimen/_138sdp"
            android:layout_height="@dimen/_138sdp"
            android:layout_gravity="center" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:elevation="0.0dip"
            app:cardCornerRadius="3.0dip">

            <ImageView
                android:id="@id/videoView_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_youtube" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_share_title"
        android:layout_below="@+id/fl_thumb"
        android:padding="@dimen/_16sdp"
        android:text="Chia sẻ ứng dụng"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_s"
        android:layout_below="@+id/tv_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_share_firts"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/ll_share_firts_more"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@id/share_container_1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ad_container"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@id/share_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginBottom="12.0dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnFacebook"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_facebook2" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="Facebook"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnYoutube"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_youtube_2" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="YouTube"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnMessenger"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_messenger" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="Messenger"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnInstagram"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_instagram" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="Instagram"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnGmail"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_gmail2" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="Gmail"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@id/btnWhatsApp"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_whatsapp" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="WhatsApp"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="12.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnTwitter"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_twitter" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="Twitter"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share_firts_more"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@id/share_container_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ad_container"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@id/share_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginBottom="12.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="12.0dip"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/btnShareMore"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:src="@drawable/ic_more" />

                            <TextView
                                style="@style/TextBelowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="More"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/grey_400"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_below="@+id/rl_s"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_new"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="8.0dip"
           android:background="@drawable/bg_final_ads">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/com_facebook_loading"
                android:textColor="@color/grey_400"
                android:textSize="16.0sp" />

            <include layout="@layout/layout_ads_big" />
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@id/btn_new"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="16.0dip"
        android:src="@drawable/ic_back_home" />
</RelativeLayout>