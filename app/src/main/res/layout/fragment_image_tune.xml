<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingRight="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp">

    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_4sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:textColor="#333333"
            android:text="Brightness"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_brightness"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"
            android:max="100"
            android:progressBackgroundTint="@color/blue"
            android:progress="50"
            android:progressDrawable="@android:color/transparent"/>

        <TextView
            android:id="@+id/tv_brightness"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="50"
            android:layout_gravity="center"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:text="Contrast"
            android:textSize="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_contrast"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_contrast"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="50"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_4sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:text="Hue"
            android:textSize="@dimen/_10sdp"
            android:layout_height="match_parent"/>

        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_hue"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"
            android:progress="50"
            android:progressDrawable="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_hue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50"
            android:textAlignment="textEnd"
            />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:text="Saturation"
            android:textSize="@dimen/_10sdp"
            android:layout_height="match_parent"/>

        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_saturation"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"
            android:progress="50"
            android:progressDrawable="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_saturation"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="textEnd"
            android:text="50"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutTune"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabGravity="center"
        android:visibility="gone"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerTune"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />
</LinearLayout>
