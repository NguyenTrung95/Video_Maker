<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:dist="http://schemas.android.com/apk/distribution"
              android:padding="@dimen/_16sdp"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
              android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent"
              android:layout_height="@dimen/_180sdp">
    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:textColor="#333333"
            android:text="Brightness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_brightness"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:max="100"
            android:progress="50"
            android:progressDrawable="@android:color/transparent"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="100"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:text="Contrast"
            android:layout_height="wrap_content"/>
        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_contrast"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:max="100"
            android:progress="50"
            android:progressDrawable="@android:color/transparent"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="100"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:text="Hue"
            android:layout_height="wrap_content"/>
        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_hue"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:max="100"
            android:progress="50"
            android:progressDrawable="@android:color/transparent"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="100"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:text="Saturation"
            android:layout_height="wrap_content"/>
        <com.devchie.videomaker.view.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/sb_saturation"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:max="100"
            android:progress="50"
            android:progressDrawable="@android:color/transparent"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="100"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout android:id="@+id/tablayoutTune" android:layout_width="match_parent"
                                                android:layout_height="40dp" app:tabGravity="center"
        android:visibility="gone"
                                                app:tabIndicatorHeight="0dp" app:tabMode="scrollable"
                                                app:tabSelectedTextColor="@color/colorAccent" app:tabTextColor="@color/white"/>
    <androidx.viewpager.widget.ViewPager android:id="@+id/viewpagerTune" android:layout_width="match_parent"
        android:visibility="gone"
                                         android:layout_height="match_parent"/>
</LinearLayout>
