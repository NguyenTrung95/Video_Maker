<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/TextBelowImage"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="@string/duration_title"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ll_1s"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_height="@dimen/_6sdp"
            android:src="@drawable/ic_1s" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/ll_1s"
            android:layout_toStartOf="@+id/tmv_5s">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_seek" />

            <SeekBar
                android:id="@+id/sb_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4sdp"
                android:min="1"
                android:max="5"
                android:progress="50"
                android:progressDrawable="@android:color/transparent"
                android:progressTint="@color/blue"
                android:splitTrack="false"
                android:thumb="@drawable/thumb_image"
                android:thumbTint="@color/blue" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/tmv_5s"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_8sdp"
            android:src="@drawable/ic_2s" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl1"
       android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="@dimen/_5sdp"
            android:text="1s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="5s"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@id/rdgDuration"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip">

        <RadioButton
            android:id="@id/rd10"
            style="@style/TextBelowImage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:buttonTint="@color/selected_border"
            android:checked="true"
            android:text="1s"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

        <RadioButton
            android:id="@id/rd15"
            style="@style/TextBelowImage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:buttonTint="@color/selected_border"
            android:text="2s"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

        <RadioButton
            android:id="@id/rd20"
            style="@style/TextBelowImage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:buttonTint="@color/selected_border"
            android:text="3s"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

        <RadioButton
            android:id="@id/rd25"
            style="@style/TextBelowImage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:buttonTint="@color/selected_border"
            android:text="5s"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

        <RadioButton
            android:id="@id/rd30"
            style="@style/TextBelowImage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:buttonTint="@color/selected_border"
            android:text="10s"
            android:textColor="@color/white"
            android:textSize="14.0dip" />
    </RadioGroup>
</RelativeLayout>